<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sourcepit</groupId>
		<artifactId>srcpit-parent</artifactId>
		<version>21-SNAPSHOT</version>
	</parent>

	<artifactId>srcpit-ide</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<os>win32</os>
		<ws>win32</ws>
		<arch>x86_64</arch>
		<classifier>${os}.${ws}.${arch}</classifier>
		<distName>${project.artifactId}-${project.version}-${classifier}</distName>
		<distDir>${project.build.directory}/${distName}</distDir>
	</properties>

	<!-- repo to resolve parent pom from -->
	<repositories>
		<repository>
			<id>srcpit-public</id>
			<url>http://nexus.sourcepit.org/content/groups/public/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>prepare-local-update-sites</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.sourcepit</groupId>
									<artifactId>b2eclipse</artifactId>
									<version>0.4.0</version>
									<classifier>site-sdk</classifier>
									<type>zip</type>
									<outputDirectory>${project.build.directory}/sites/b2eclipse</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.sourcepit</groupId>
									<artifactId>jdt-template-variables</artifactId>
									<version>0.2.0</version>
									<classifier>site-sdk</classifier>
									<type>zip</type>
									<outputDirectory>${project.build.directory}/sites/jdt-template-variables</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.sourcepit.m2p2</groupId>
				<artifactId>m2p2-director-maven-plugin</artifactId>
				<version>0.5.0</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>install</goal>
						</goals>
						<configuration>
							<destination>${distDir}</destination>
							<repositories>
								<repository>
									<id>mars</id>
									<url>http://download.eclipse.org/releases/mars</url>
								</repository>
								<repository>
									<id>m2e</id>
									<url>http://download.eclipse.org/technology/m2e/releases</url>
								</repository>
								<repository>
									<id>egit</id>
									<url>http://download.eclipse.org/egit/updates</url>
								</repository>
								<repository>
									<id>ajdt</id>
									<!-- Currently there is no final release of AJDT for mars. -->
									<url>http://download.eclipse.org/tools/ajdt/44/dev/update</url>
								</repository>
								<repository>
									<id>goclipse</id>
									<url>http://goclipse.github.io/releases/</url>
								</repository>
								<repository>
									<id>sheled</id>
									<url>http://sourceforge.net/projects/shelled/files/shelled/update/</url>
								</repository>
								<repository>
									<id>eclipsejsonedit</id>
									<url>https://sourceforge.net/projects/eclipsejsonedit/files/update</url>
								</repository>
								<repository>
									<id>subversive</id>
									<url>http://download.eclipse.org/technology/subversive/2.0/update-site/</url>
								</repository>
								<repository>
									<id>subversive-connectors</id>
									<url>http://community.polarion.com/projects/subversive/download/eclipse/4.0/update-site/</url>
								</repository>
								<repository>
									<id>checkstyle</id>
									<url>http://eclipse-cs.sf.net/update</url>
								</repository>
								<repository>
									<id>easy-shell</id>
									<url>http://pluginbox.sourceforge.net/</url>
								</repository>
								<repository>
									<id>m2e-mavendev</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/mavendev/0.4.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-sourcelookup</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/sourcelookup/1.2.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-ajdt</id>
									<url>http://dist.springsource.org/release/AJDT/configurator</url>
								</repository>
								<repository>
									<id>m2e-jdt</id>
									<url>http://download.jboss.org/jbosstools/updates/m2e-extensions/m2e-jdt-compiler</url>
								</repository>
								<repository>
									<id>m2e-egit</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-egit/0.14.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-tycho</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-tycho/0.9.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-subversive</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-subversive/0.13.0/N/0.13.0.201302121311/</url>
								</repository>
								<repository>
									<id>m2e-modello</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-modello/0.16.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-antlr</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-antlr/0.15.0/N/0.15.0.201405281449/</url>
								</repository>
								<repository>
									<id>m2e-buildhelper</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-buildhelper/0.15.0/N/0.15.0.201405280027/</url>
								</repository>
								<repository>
									<id>m2e-mavenarchiver</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-mavenarchiver/0.17.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-plexus</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-plexus/0.15.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-sisu</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-sisu/0.15.0/N/LATEST/</url>
								</repository>
								<repository>
									<id>m2e-checkstyle</id>
									<url>http://m2e-code-quality.github.io/m2e-code-quality/site</url>
								</repository>
								<repository>
									<id>b2eclipse</id>
									<url>file:///${project.build.directory}/sites/b2eclipse</url>
								</repository>
								<repository>
									<id>jdt-template-variables</id>
									<url>file:///${project.build.directory}/sites/jdt-template-variables</url>
								</repository>
								<repository>
									<id>workspacemechanic</id>
									<url>http://workspacemechanic.eclipselabs.org.codespot.com/git.update/mechanic</url>
								</repository>
							</repositories>
							<installIUs>
								<!-- Eclipse Platform -->
								<iu>org.eclipse.platform.sdk</iu>

								<!-- m2e -->
								<iu>org.eclipse.m2e.feature.feature.group</iu>
								<iu>org.eclipse.m2e.sdk.feature.feature.group</iu>

								<!-- m2e connectors (misc) -->
								<iu>com.ifedorenko.m2e.mavendev.feature.feature.group</iu>
								<iu>org.sonatype.tycho.m2e.feature.feature.group</iu>
								<iu>org.sonatype.m2e.modello.feature.feature.group</iu>
								<iu>org.sonatype.m2e.antlr.feature.feature.group</iu>
								<iu>org.sonatype.m2e.mavenarchiver.feature.feature.group</iu>
								<iu>org.sonatype.m2e.plexus.annotations.feature.feature.group</iu>
								<iu>org.sonatype.m2e.sisu.feature.feature.group</iu>
								<iu>org.sonatype.m2e.buildhelper.feature.feature.group</iu>

								<!-- JDT + AJDT + PDE + m2e connectors -->
								<iu>org.eclipse.jdt.feature.group</iu>
								<iu>org.eclipse.jdt.source.feature.group</iu>
								<iu>org.jboss.tools.m2e.jdt.feature.feature.group</iu>
								<iu>org.eclipse.ajdt.feature.group</iu>
								<iu>org.eclipse.ajdt.source.feature.group</iu>
								<iu>org.maven.ide.eclipse.ajdt.feature.feature.group</iu>
								<iu>org.eclipse.pde.feature.group</iu>
								<iu>org.eclipse.pde.source.feature.group</iu>

								<!-- WTP + m2e connectors -->
								<iu>org.eclipse.wst.xml_ui.feature.feature.group</iu>
								<iu>org.eclipse.jst.enterprise_ui.feature.feature.group</iu>
								<iu>org.eclipse.jst.server_ui.feature.feature.group</iu>
								<iu>org.eclipse.jst.server_adapters.feature.feature.group</iu>
								<iu>org.eclipse.jst.server_adapters.ext.feature.feature.group</iu>
								<iu>org.eclipse.m2e.wtp.feature.feature.group</iu>

								<!-- GoClipse -->
								<iu>goclipse_feature.feature.group</iu>

								<!-- EMF + EMF Diagram Editor -->
								<iu>org.eclipse.emf.sdk.feature.group</iu>
								<iu>org.eclipse.emf.ecoretools.sdk.feature.group</iu>

								<!-- Window Builder -->
								<iu>org.eclipse.wb.rcp.feature.feature.group</iu>

								<!-- eGit + m2e connectors -->
								<iu>org.eclipse.egit.feature.group</iu>
								<iu>org.eclipse.egit.source.feature.group</iu>
								<iu>org.eclipse.jgit.feature.group</iu>
								<iu>org.eclipse.jgit.source.feature.group</iu>
								<iu>org.sonatype.m2e.egit.feature.feature.group</iu>

								<!-- Subversive + m2e connectors -->
								<iu>org.eclipse.team.svn.feature.group</iu>
								<iu>org.eclipse.team.svn.source.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.connector.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.connector.sources.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.connector.svnkit18.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.connector.svnkit18.sources.feature.group</iu>
								<iu>org.sonatype.m2e.subversive.feature.feature.group</iu>
								<iu>com.basistech.m2e.code.quality.checkstyle.feature.feature.group</iu>

								<!-- Workspace Mechanic -->
								<iu>com.google.eclipse.mechanic.feature.group</iu>

								<!-- Checkstyle -->
								<iu>net.sf.eclipsecs.feature.group</iu>

								<!-- Own Tooling -->
								<iu>org.sourcepit.b2eclipse.sdk.feature.feature.group</iu>
								<iu>org.sourcepit.jdt.template.variables.sdk.feature.feature.group</iu>

								<!-- Easy Shell -->
								<iu>com.tetrade.eclipse.plugins.easyshell.feature.feature.group</iu>

								<!-- SchellEd - Bash script editor -->
								<iu>net.sourceforge.shelled.feature.group</iu>

								<!-- Ruby editor -->
								<iu>org.eclipse.dltk.ruby.feature.group</iu>

								<!-- Json editor -->
								<iu>jsonedit-feature.feature.group</iu>
							</installIUs>
							<os>${os}</os>
							<ws>${ws}</ws>
							<arch>${arch}</arch>
							<roaming>true</roaming>
							<eclipseIni>
								<appArgs>
									<prepend>
										<arg>-pluginCustomization</arg>
										<arg>plugin_customization.ini</arg>
									</prepend>
								</appArgs>
								<vmArgs>
									<args>
										<arg>-Xms512m</arg>
										<arg>-Xmx2048m</arg>
										<arg>-XX:MaxPermSize=256m</arg>
										<arg>-XX:+CMSClassUnloadingEnabled</arg>
									</args>
								</vmArgs>
							</eclipseIni>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-plugin_customization.ini</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<copy file="${basedir}/src/main/resources/plugin_customization.ini" toDir="${distDir}" />
							</target>
						</configuration>
					</execution>
					<execution>
						<id>zip-dist</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<zip destfile="${project.build.directory}/${distName}.zip">
									<zipfileset dir="${distDir}" prefix="${distName}" />
								</zip>
								<attachartifact file="${project.build.directory}/${distName}.zip" classifier="${classifier}" type="zip" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
