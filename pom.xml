<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sourcepit</groupId>
		<artifactId>srcpit-parent</artifactId>
		<version>10</version>
	</parent>

	<artifactId>srcpit-ide</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<os>win32</os>
		<ws>win32</ws>
		<arch>x86_64</arch>
		<classifier>${os}.${ws}.${arch}</classifier>
		<distName>${project.artifactId}-${project.version}-${classifier}</distName>
		<distDir>${project.build.directory}/${distName}</distDir>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.sourcepit.m2p2</groupId>
				<artifactId>m2p2-director-maven-plugin</artifactId>
				<version>0.3.0-SNAPSHOT</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>install</goal>
						</goals>
						<configuration>
							<destination>${distDir}</destination>
							<repositories>
								<repository>
									<id>kepler</id>
									<url>http://download.eclipse.org/releases/kepler</url>
								</repository>
								<repository>
									<id>m2e</id>
									<url>http://download.eclipse.org/technology/m2e/releases</url>
								</repository>
								<repository>
									<id>egit</id>
									<url>http://download.eclipse.org/egit/updates</url>
								</repository>
								<repository>
									<id>ajdt</id>
									<url>http://download.eclipse.org/tools/ajdt/43/update</url>
								</repository>
								<repository>
									<id>subversive</id>
									<url>http://download.eclipse.org/technology/subversive/1.1/update-site/</url>
								</repository>
								<repository>
									<id>subversive-connectors</id>
									<url>http://community.polarion.com/projects/subversive/download/eclipse/3.0/kepler-site</url>
								</repository>
								<repository>
									<id>subversive-integrations</id>
									<url>http://community.polarion.com/projects/subversive/download/integrations/kepler-site</url>
								</repository>
								<repository>
									<id>checkstyle</id>
									<url>http://eclipse-cs.sf.net/update</url>
								</repository>
								<repository>
									<id>m2e-ajdt</id>
									<url>http://dist.springsource.org/release/AJDT/configurator</url>
								</repository>
								<repository>
									<id>m2e-jdt</id>
									<url>http://download.jboss.org/jbosstools/updates/m2e-extensions/m2e-jdt-compiler</url>
								</repository>
								<repository>
									<id>m2e-egit</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-egit/0.14.0/N/0.14.0.201401060023/</url>
								</repository>
								<repository>
									<id>m2e-tycho</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-tycho/0.7.0/N/0.7.0.201309291400/</url>
								</repository>
								<repository>
									<id>m2e-subversive</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-subversive/0.13.0/N/0.13.0.201302121311/</url>
								</repository>
								<repository>
									<id>m2e-modello</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-modello/0.16.0/N/0.16.0.201302171621/</url>
								</repository>
								<repository>
									<id>m2e-antlr</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-antlr/0.15.0/N/0.15.0.201302040035/</url>
								</repository>
								<repository>
									<id>m2e-buildhelper</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-buildhelper/0.15.0/N/0.15.0.201212120353/</url>
								</repository>
								<repository>
									<id>m2e-mavenarchiver</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-mavenarchiver/0.15.0/N/0.15.0.201212080009/</url>
								</repository>
								<repository>
									<id>m2e-plexus</id>
									<url>http://repo1.maven.org/maven2/.m2e/connectors/m2eclipse-plexus/0.15.0/N/0.15.0.201207090126/</url>
								</repository>
							</repositories>
							<installIUs>
								<iu>org.eclipse.platform.sdk</iu>
								<iu>org.eclipse.emf.sdk.feature.group</iu>
								<iu>org.eclipse.m2e.feature.feature.group</iu>
								<iu>org.eclipse.m2e.sdk.feature.feature.group</iu>
								<iu>org.eclipse.jdt.feature.group</iu>
								<iu>org.eclipse.jdt.source.feature.group</iu>
								<iu>org.eclipse.ajdt.feature.group</iu>
								<iu>org.eclipse.ajdt.source.feature.group</iu>
								<iu>org.eclipse.pde.feature.group</iu>
								<iu>org.eclipse.pde.source.feature.group</iu>
								<iu>org.eclipse.wst.xml_ui.feature.feature.group</iu>
								<iu>org.eclipse.emf.ecoretools.sdk.feature.group</iu>
								<iu>org.eclipse.wb.rcp.feature.feature.group</iu>
								<iu>org.eclipse.egit.feature.group</iu>
								<iu>org.eclipse.egit.source.feature.group</iu>
								<iu>org.eclipse.jgit.feature.group</iu>
								<iu>org.eclipse.jgit.source.feature.group</iu>
								<iu>org.eclipse.team.svn.feature.group</iu>
								<iu>org.eclipse.team.svn.source.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.connector.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.connector.svnkit18.feature.group</iu>
								<iu>org.polarion.eclipse.team.svn.m2eclipse.feature.group</iu>
								<iu>net.sf.eclipsecs.feature.group</iu>
								<iu>org.maven.ide.eclipse.ajdt.feature.feature.group</iu>
								<iu>org.jboss.tools.m2e.jdt.feature.feature.group</iu>
								<iu>org.sonatype.m2e.egit.feature.feature.group</iu>
								<iu>org.sonatype.tycho.m2e.feature.feature.group</iu>
								<iu>org.sonatype.m2e.subversive.feature.feature.group</iu>
								<iu>org.sonatype.m2e.modello.feature.feature.group</iu>
								<iu>org.sonatype.m2e.antlr.feature.feature.group</iu>
								<iu>org.sonatype.m2e.mavenarchiver.feature.feature.group</iu>
								<iu>org.sonatype.m2e.plexus.annotations.feature.feature.group</iu>
							</installIUs>
							<os>${os}</os>
							<ws>${ws}</ws>
							<arch>${arch}</arch>
							<eclipseIni>
								<appArgs>
									<prepend>
										<arg>-pluginCustomization</arg>
										<arg>plugin_customization.ini</arg>
									</prepend>
								</appArgs>
								<vmArgs>
									<args>
										<arg>-Xms512m</arg>
										<arg>-Xmx2048m</arg>
										<arg>-XX:MaxPermSize=256m</arg>
										<arg>-XX:+CMSClassUnloadingEnabled</arg>
									</args>
								</vmArgs>
							</eclipseIni>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-plugin_customization.ini</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<copy file="${basedir}/src/main/resources/plugin_customization.ini" toDir="${distDir}" />
							</target>
						</configuration>
					</execution>
					<execution>
						<id>zip-dist</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<zip destfile="${project.build.directory}/${distName}.zip">
									<zipfileset dir="${distDir}" prefix="${distName}" />
								</zip>
								<attachartifact file="${project.build.directory}/${distName}.zip" classifier="${classifier}"
									type="zip" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>